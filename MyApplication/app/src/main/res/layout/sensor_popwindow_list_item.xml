<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/pop_device_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/pop_top1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/pop_device_image"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="传感器号："
            android:textColor="@color/black"
            android:textSize="@dimen/smallSize" />

        <TextView
            android:id="@+id/pop_senId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="device_id"
            android:textColor="@color/black"
            android:textSize="@dimen/normalSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pop_top1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/pop_device_image"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型编号："
            android:textColor="@color/black"
            android:textSize="@dimen/smallSize" />

        <TextView
            android:id="@+id/pop_device_type_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="transfer_type"
            android:textColor="@color/black"
            android:textSize="@dimen/normalSize" />
    </LinearLayout>

    <TextView
        android:id="@+id/pop_device_type"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="加速度"
        android:textColor="@color/black"/>
</RelativeLayout>
